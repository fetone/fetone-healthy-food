/* 轮播图开始 */
.banner{
  position: relative;
}
.swiper{
  width: 100%;
  height: 400rpx;
}
.swiper-item{
  position: relative;
}
.swiper .swiper-img{
  width: 100%;
  height: 100%;
}
.swiper .swiper-desc{
  width: 100%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 28rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
}
.swiper-index{
  position: absolute;
  right: 16rpx;
  bottom: 12rpx;
  color: #fff;
}
/* 轮播图结束 */

/* 每日一测开始 */
.day-test{
  margin: 30rpx 0;
  display: flex;
  justify-content: space-around;
  padding: 0 10rpx;
}
.day-test .test-item image{
  width: 300rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.day-test .test-item .test-title{
  text-align: center;
  font-size: 28rpx;
  color: #666;
}
/* 每日一测结束 */

/* 资讯开始 */
.news{
  padding: 0 18rpx;
}
.news-item{
  border-bottom: 1rpx solid #ccc;
  margin-bottom: 20rpx;
}
.news .news-title{
  font-size: 30rpx;
  color: #333;
}
.news .news-content{
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
}
.news .news-content .news-img{
  width: 200rpx;
  height: 140rpx;
  margin-right: 14rpx;
  border-radius: 10rpx;
}
.news .news-content .news-desc{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 26rpx;
  color: #555;
}
.news .news-content .desc-text{
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3;
}
.news .news-content .desc-read{
  color: #555;
  text-align: right;
}
.news .news-content .desc-read text{
  color: #d50;
}
/* 资讯结束 */